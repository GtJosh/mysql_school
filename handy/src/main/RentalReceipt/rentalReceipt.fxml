<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="main.RentalReceipt.RentalReceiptController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="root">
  <padding><Insets top="25" right="25" bottom="10" left="25" /></padding>
  <!--<gridLinesVisible>true</gridLinesVisible>-->

  <Label style="-fx-font: BOLD 12 Tahoma;" text="HANDYMAN TOOLS RECEIPT"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>

  <Label style="-fx-font: BOLD 10 Tahoma;" text="Reservation Number:"
         GridPane.columnIndex="0" GridPane.rowIndex="1"/>

  <Label fx:id="resNumberLabel"
         GridPane.columnIndex="1" GridPane.rowIndex="1"/>

  <Label style="-fx-font: BOLD 10 Tahoma;" text="Clerk On Duty:"
         GridPane.columnIndex="2" GridPane.rowIndex="1"/>

  <Label fx:id="clerkNameLabel"
         GridPane.columnIndex="3" GridPane.rowIndex="1"/>

  <Label style="-fx-font: BOLD 10 Tahoma;" text="Customer Name:"
         GridPane.columnIndex="0" GridPane.rowIndex="2"/>

  <Label fx:id="customerNameLabel"
         GridPane.columnIndex="1" GridPane.rowIndex="2"/>

  <Label style="-fx-font: BOLD 10 Tahoma;" text="Credit Card #:"
         GridPane.columnIndex="2" GridPane.rowIndex="2"/>

  <Label fx:id="ccNumberLabel"
         GridPane.columnIndex="3" GridPane.rowIndex="2"/>

  <Label style="-fx-font: BOLD 10 Tahoma;" text="Start Date:"
         GridPane.columnIndex="0" GridPane.rowIndex="3"/>

  <Label fx:id="startDateLabel"
         GridPane.columnIndex="1" GridPane.rowIndex="3"/>


  <Label style="-fx-font: BOLD 10 Tahoma;" text="End Date:"
         GridPane.columnIndex="2" GridPane.rowIndex="3"/>

  <Label fx:id="endDateLabel"
         GridPane.columnIndex="3" GridPane.rowIndex="3"/>

  <Label style="-fx-font: BOLD 10 Tahoma;"  text="Rental Price:"
         GridPane.columnIndex="0" GridPane.rowIndex="4"/>

  <Label fx:id="totalRentalLabel"
         GridPane.columnIndex="1" GridPane.rowIndex="4"/>

  <Label style="-fx-font: BOLD 10 Tahoma;"  text="Deposit Held:"
         GridPane.columnIndex="0" GridPane.rowIndex="5"/>

  <Label fx:id="totalDepositLabel"
         GridPane.columnIndex="1" GridPane.rowIndex="5"/>


  <Label style="-fx-font: BOLD 10 Tahoma;"  text="------------------"
         GridPane.columnIndex="1" GridPane.rowIndex="8"/>

  <Label style="-fx-font: BOLD 10 Tahoma;"  text="Total:"
         GridPane.columnIndex="0" GridPane.rowIndex="9"/>

  <Label fx:id="totalCostLabel"
         GridPane.columnIndex="1" GridPane.rowIndex="9"/>

  <HBox alignment="bottom_left" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="10">
    <children>
      <Button onAction="#handleBackToMainMenuButtonAction" text="Back To Main Menu" />
    </children>
  </HBox>

</GridPane>
