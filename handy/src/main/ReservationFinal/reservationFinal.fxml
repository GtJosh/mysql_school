<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="main.ReservationFinal.ReservationFinalController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="root">
  <padding><Insets top="25" right="25" bottom="10" left="25" /></padding>

  <Label style="-fx-font: BOLD 12 Tahoma;" text="Your Reservation Number is:"
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>

    <Text id="desiredTools" text="Tools Rented:"
          GridPane.columnIndex="0" GridPane.rowIndex="2"
          GridPane.columnSpan="2"/>

  <!--Need fields to pull in tools rented-->

    <Label text="Start Date:"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>

  <!--Need to pull in start date-->

    <Label text="End Date:"
           GridPane.columnIndex="0" GridPane.rowIndex="6"/>

  <!--Need to pull in end date-->

    <Label text="Total Rental Price:"
           GridPane.columnIndex="0" GridPane.rowIndex="7"/>

  <!--Total Rental Price calculated by Application-->

    <Label text="Total Deposit Required:"
           GridPane.columnIndex="0" GridPane.rowIndex="8"/>

  <!--Total Deposit Cost calculated by application-->

  <HBox spacing="10" alignment="BOTTOM_LEFT"
      GridPane.columnIndex="0" GridPane.rowIndex="9">
      <Button text="Back To Main Menu"
       onAction="#handleBackToMainMenuButtonAction" />
  </HBox>


</GridPane>
