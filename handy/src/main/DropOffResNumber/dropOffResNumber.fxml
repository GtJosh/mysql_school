<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="main.DropOffResNumber.DropOffResNumberController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

        <Label text="Reservation Number:"
               GridPane.columnIndex="0" GridPane.rowIndex="0"/>

        <TextField fx:id="dropOffResNum"
                GridPane.columnIndex="1" GridPane.rowIndex="0"/>


        <HBox spacing="10" alignment="bottom_right"
              GridPane.columnIndex="2" GridPane.rowIndex="0">
            <Button text="Enter"
                    onAction="#handleEnterButtonAction"/>
        </HBox>

        <HBox spacing="10" alignment="bottom_left"
              GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Button text="Back To Main Menu"
                    onAction="#handleBackToMainMenuButtonAction"/>
        </HBox>

</GridPane>
